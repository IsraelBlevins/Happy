<%= stylesheet_link_tag "application.css" %>

<%# Navbar %>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
  <div class="container-fluid">
    <a class="navbar-brand mb-0 h1" href="#"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
      </ul>
      <ul class="nav navbar-nav ml-auto">
        <%= link_to "Sign up", new_user_path, :class => "btn btn-outline-primary" %>
      </ul>
    </div>
  </div>
</nav>

<div style="margin-top:50px;">

<%= image_tag("happy.png", :alt => "rss feed", class: "mx-auto d-block", size: "100x100") %>

<br>

<h2 class="text-center">Find Your Happy</h2>
<h3 class="text-center">Login</h3>

<%= form_with(url: login_path, scope: :session, local: true) do |form| %>
    <div>
      <p style="color:red; text-align: center"><%= flash[:danger] %></p>
    </div>

    <br>
      
    <div class="text-center actions">
    <table style="padding-right: 80px;">
      <tr>
        <th><%= form.label :email, "Email:" %> </th>
        <td><%= form.email_field :email, placeholder: 'name@example.com' %> </td>
      </tr>
      <tr>
        <th><%= form.label :password, "Password:" %> </th>
        <td><%= form.password_field :password %> </td>
      </tr>
    </table>
  
    <br>
  
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>

    <br>

    <div class="text-center">
      <p> <%= link_to 'Don\'t have an account? Sign up.', new_user_path %></p>
    </div>
  <% end %>