<% if comment.recipient_ID == pageID%>
    <% unless !comment.persisted? %>
        <div class="card">
            <div class="card-body">
                <header style="font-size:20px">
                    <%= "From: " + comment.commenter %>
                </header>
                <%= comment.body %>
                <footer style="font-size:12px">
                    <%= "Posted on " + comment.comment_date.strftime("%b %d, %Y at %-I:%M:%S ") %>
                </footer>
            </div>
        </div>
    <% end %>
<% end %>